#include<iostream>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int count = 0;
    int result = 0;
    for(int i = 0; i<n; i++)
    {
        int a, b;
        cin>>a>>b;
        count -=a;
        count +=b;
        result = max(result,count);
    }
    cout<<result;
    return 0;
}
